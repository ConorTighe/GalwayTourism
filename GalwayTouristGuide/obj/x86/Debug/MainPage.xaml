<Page
    x:Class="GalwayTouristGuide.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GalwayTouristGuide"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <RelativePanel Grid.Row="0" Background="GreenYellow">
                <Button x:ConnectionId='14' Name="MainMenuBtn" 
                        FontFamily="Assets/Irish.ttf#Irish" 
                        Content="&#x00F9;"  
                        FontSize="45" 
                         Height="50"
                        Width="60"
                                                 
                        RelativePanel.AlignLeftWithPanel="True"
                        ></Button>
                <TextBlock x:ConnectionId='15' Name="TitleText"
                           FontSize="40"
                           FontFamily="Assets/KGLuckoftheIrish.ttf#KG Luck of the Irish"
                           RelativePanel.RightOf="MainMenuBtn"
                           Margin="65,0,0,0"
                           Text="Galway Tourism"/>
            </RelativePanel>
            <SplitView x:ConnectionId='1' Name="MySplitView" 
                   IsPaneOpen="False" 
                   DisplayMode="CompactOverlay" 
                   OpenPaneLength="200" 
                   CompactPaneLength="50"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Grid.Row="1"
                   Background="GreenYellow">
                <SplitView.Pane >
                    <ListBox x:ConnectionId='2' SelectionMode="Single" 
                 Name="IconsListBox"
                 Background="GreenYellow"
                 >
                        <ListBoxItem x:ConnectionId='3' Name="LandmarksListBoxItem">
                            <StackPanel Orientation="Horizontal" >
                                <Button x:ConnectionId='12' Name="LandmarksBtn" 
                                        FontFamily="Assets/Irish.ttf#Irish"
                                        Content="&#x00F6;" 
                                        FontSize="26"
                                        Height="40"
                                        Width="40"
                                                                  
                                        ></Button>
                                <TextBlock Text="Landmarks" FontSize="24" Margin="20,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='4' Name="FoodListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button x:ConnectionId='11' Name="FoodBtn" 
                                        FontFamily="Assets/Irish.ttf#Irish" 
                                        Content="&#x005F;" 
                                        FontSize="26"
                                         Height="40"
                                        Width="40"
                                                             ></Button>
                                <TextBlock Text="Food" FontSize="24" Margin="20,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='5' Name="HotelsListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button x:ConnectionId='10' Name="HotelBtn" 
                                        FontFamily="Assets/Irish.ttf#Irish" 
                                        Content="&#x0048;" 
                                        FontSize="26"
                                         Height="40"
                                        Width="40"
                                                              ></Button>
                                <TextBlock Text="Rooms" FontSize="24" Margin="20,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='6' Name="ClubsListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button x:ConnectionId='9' Name="ClubsBtn" 
                                        FontFamily="Assets/Irish.ttf#Irish" 
                                        Content="&#x002C;" 
                                        FontSize="26"
                                        Height="40"
                                        Width="40"
                                                             ></Button>
                                <TextBlock Text="Nightlife" FontSize="24" Margin="20,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='7' Name="EventsListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button x:ConnectionId='8' Name="EventsBtn" 
                                        FontFamily="Assets/Irish.ttf#Irish" 
                                        Content="&#x00DA;" 
                                        FontSize="26"
                                        Height="40"
                                        Width="40"
                                                             ></Button>
                                <TextBlock Text="Events" FontSize="24" Margin="20,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        
                    </ListBox>
                </SplitView.Pane>
                <SplitView.Content>
                    <Frame x:ConnectionId='13' Name="MyFrame">

                    </Frame>
                </SplitView.Content>
            </SplitView>
        </StackPanel>
    </Grid>
</Page>

