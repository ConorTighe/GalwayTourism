<Page
    x:Class="GalwayTouristGuide.Feed"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GalwayTouristGuide"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="LinkBtns">
            <Setter Property="Background" Value="#B9314F"></Setter>
            <Setter Property="Foreground" Value="#F8CF8B"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Width" Value="225"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="Place">
            <Setter Property="FontSize" Value="36"></Setter>
            <Setter Property="Foreground" Value="#F8CF8B"></Setter>
            <Setter Property="FontFamily" Value="Assets/KGLuckoftheIrish.ttf#KG Luck of the Irish"></Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#3A4F41" >
      
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer
                Grid.Row="0" 
                Height="600"
                VerticalScrollBarVisibility="Auto"
            >

            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" >
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='2' Name="GalwayImg" Source="Assets\gtown.jpg" />
                <TextBlock x:ConnectionId='3' Name="GalwayMain"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           Text="Galway, a harbour city on Ireland's west coast, sits where the River Corrib meets the Atlantic Ocean. The city's hub is 18th-century Eyre Square, a popular meeting spot surrounded by shops and traditional pubs that often offer live Irish folk music. Nearby, stone-clad cafes, boutiques and art galleries line the winding lanes of the Latin Quarter, which retains portions of the medieval city walls." />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='4' Name="SparchImg" Source="Assets\Sparch.jpg" />
                <TextBlock x:ConnectionId='5' Name="SpanishArch"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Spanish Arch" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='47' Name="SparchInfo" Content="More Info"
                    FontSize="22" 
                    Height="50"
                    Style="{StaticResource LinkBtns}"
                                            
                    HorizontalAlignment="Center"
                   ></Button>
                    
                    <Button x:ConnectionId='48' Name="SparchLoc" Content="Location" 
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                           
                    HorizontalAlignment="Center"
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='6'
                      Name="SpachText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="The two arches were part of the extension of the city wall from Martin's Tower to the bank of the River Corrib, as a measure to protect the city's quays, which were in the area once known as the Fish Market. " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='7' Name="MuseumImg" Source="Assets\GalwayMuseum.jpg" />
                <TextBlock x:ConnectionId='8' Name="Museum"
                           Style="{StaticResource Place}"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           Text="Galway City Museum" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='45' Name="MuseumInfo" Content="More Info" 
                                            
                    FontSize="22" 
                    Height="50"
                    Style="{StaticResource LinkBtns}"
                    HorizontalAlignment="Center"
                    ></Button>

                    <Button x:ConnectionId='46' Name="MuseumLoc" Content="Location" 
                    FontSize="22" 
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                    HorizontalAlignment="Center"
                                           
                   ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='9'
                               Name="MuseumText"
                               TextWrapping="Wrap" 
                               HorizontalAlignment="Center"
                               Text="Small displays of documents, photographs, memorabilia and medieval artefacts chronicling urban life.. " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='10' Name="ChurchImg" Source="Assets\stnicholascollegiatechurch.jpg" />
                <TextBlock x:ConnectionId='11' Name="Church"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="St.Nicholas church" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='43' Name="ChruchInfo" Content="More Info" 
                    Style="{StaticResource LinkBtns}"
                                            
                    FontSize="22" 
                    Height="50" 
                    HorizontalAlignment="Center"
                   ></Button>
                    <Button x:ConnectionId='44' Name="ChurchLoc" Content="Location" 
                    Style="{StaticResource LinkBtns}"
                    FontSize="22" 
                    Height="50" 
                                           
                    HorizontalAlignment="Center"
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='12'
                      Name="ChurchText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Margin="0,10,0,0"
                      Text="Large, 14th-century Anglican Episcopal church visited by Oliver Cromwell and Christopher Columbus. " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='13' Name="EyreSquareImg" Source="Assets\eyre.jpg" />
                <TextBlock x:ConnectionId='14' Name="EyreSquare"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Eyre Square" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='41' Name="EyreInfo" Content="More Info" 
                    Style="{StaticResource LinkBtns}"
                    FontSize="22" 
                    Height="50" 
                                          
                    HorizontalAlignment="Center"
                   ></Button>

                    <Button x:ConnectionId='42' Name="EyreLoc" Content="Location" 
                    FontSize="22" 
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                         
                    HorizontalAlignment="Center"
                    ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='15'
                      Name="EyreText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="Eyre Square, also known as John F. Kennedy Memorial Park is an inner-city public park in Galway, Ireland. The park is within the city centre in the heart of Galway " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='16' Name="DunguaireImg" Source="Assets\dunguaire-castle.jpg" />
                <TextBlock x:ConnectionId='17' Name="Dunguaire"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Dunguaire Castle" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='39' Name="DunguaireInfo" Content="More Info" 
                    FontSize="22" 
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                               
                    HorizontalAlignment="Center"
                   ></Button>

                    <Button x:ConnectionId='40' Name="DunguaireLoc" Content="Location" 
                    FontSize="22" 
                    Height="50" 
                    HorizontalAlignment="Center"
                                              
                    Style="{StaticResource LinkBtns}"
                    ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='18'
                      Name="DunguaireText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="Immaculately restored, 16th-century bay-side fortress with a literary history and evening banquets. " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='19' Name="CathedralImg" Source="Assets\Galway_cathedral.jpg" />
                <TextBlock x:ConnectionId='20' Name="Cathedra"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="St Nicholas Cathedral" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='37' Name="CathedraInfo" Content="More Info" 
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                              
                    HorizontalAlignment="Center"
                   ></Button>
                    <Button x:ConnectionId='38' Name="CathedraLoc" Content="Location" 
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                             
                    HorizontalAlignment="Center"
                    ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='21'
                      Name="CathedraText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="Modern and airy, green-domed, renaissance-style Catholic cathedral, with a mosaic of JF Kennedy. " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='22' Name="JamesMitchellImg" Source="Assets\JamesMitchell.jpg" />
                <TextBlock x:ConnectionId='23' Name="JamesMitchell"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="James Mitchell Museum" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='35' Name="JamesMitchellInfo" Content="More Info"  
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                                           
                    HorizontalAlignment="Center"
                   ></Button>

                    <Button x:ConnectionId='36' Name="JamesMitchellLoc" Content="Location" 
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                                  
                    HorizontalAlignment="Center"
                    ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='24'
                      Name="JamesMitchellText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="James Mitchell Museum is a geological museum based in NUI Galway, the only remnant of the university's defunct Natural History Museum. " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='25' Name="wallsImg" Source="Assets\walls.jpg" />
                <TextBlock x:ConnectionId='26' Name="walls"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Medieval city walls" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='33' Name="wallsInfo" Content="More Info"  
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                           
                    HorizontalAlignment="Center"
                   ></Button>

                    <Button x:ConnectionId='34' Name="wallsLoc" Content="Location" 
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                          
                    HorizontalAlignment="Center"
                    ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='27'
                      Name="wallsText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="Full of life and with a seemingly constant festival atmosphere, the medieval city centre of Galway is a place that demands to be visited. Today, the Galway is known as a cultural capital. However, originally it was merely a small fishing village located where the Corrib River met the bay. In 1232, with the Anglo Norman conquest it became a walled town. Some sections of the walls can still be seen today such as one of the icons of the city, the Spanish Arch.  " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />

                <Image x:ConnectionId='28' Name="redImg" Source="Assets\rede.jpg" />
                <TextBlock x:ConnectionId='29' Name="redearl"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Hall of the Red Earl" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='31' Name="redInfo" Content="More Info"  
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                         
                    HorizontalAlignment="Center"
                   ></Button>

                    <Button x:ConnectionId='32' Name="redLoc" Content="Location" 
                    FontSize="22"
                    Style="{StaticResource LinkBtns}"
                    Height="50" 
                                        
                    HorizontalAlignment="Center"
                    ></Button>
                </StackPanel>
                <TextBlock x:ConnectionId='30'
                      Name="redText"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Text="Back in the 13th century when the de Burgo family ran things in Galway, Richard – the Red Earl – erected a large hall as a seat of power. Locals would arrive to curry favour or to grovel as a sign of future fealty. After the 14 tribes took over, the hall fell into ruin, lost until 1997 when expansion of the city's Custom House uncovered its foundations. The Custom House was built on stilts overhead, leaving the old foundations open. " />
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
            </StackPanel>
        </ScrollViewer>
        <Frame x:ConnectionId='1' Name="MyFrame">

        </Frame>
    </Grid>
</Page>

