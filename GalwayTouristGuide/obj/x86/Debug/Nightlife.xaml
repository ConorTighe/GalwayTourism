<Page
    x:Class="GalwayTouristGuide.Nightlife"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GalwayTouristGuide"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="LinkBtns">
            <Setter Property="Background" Value="#B9314F"></Setter>
            <Setter Property="Foreground" Value="#F8CF8B"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Width" Value="225"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="Place">
            <Setter Property="FontSize" Value="36"></Setter>
            <Setter Property="Foreground" Value="#F8CF8B"></Setter>
            <Setter Property="FontFamily" Value="Assets/KGLuckoftheIrish.ttf#KG Luck of the Irish"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="Desc">
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="Foreground" Value="#F8CF8B"></Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#3A4F41">

        <ScrollViewer
                Grid.Row="0" 
                Height="600"
                VerticalScrollBarVisibility="Auto"
            >

            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" >
                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='2' Name="RosinImg" Source="Assets\roisin.jpg" />
                <TextBlock x:ConnectionId='3' Name="radText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Róisín Dubh" />
                <TextBlock x:ConnectionId='4' Name="radBio"
                           Margin="0,10,0,0"
                           Style="{StaticResource Desc}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Text=" Bar and club with two separate stages showcasing local and international live music and comedy acts." />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='48' Name="rosinInfo" Content="More Info"
                    Style="{StaticResource LinkBtns}"
                                           
                   ></Button>
                    <Button x:ConnectionId='49' Name="rosinLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                          
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='5'
                      Name="RosinDetails"
                      TextWrapping="Wrap" 
                      Style="{StaticResource Desc}"
                      HorizontalAlignment="Center"
                      Text="Phone - (091) 586 540 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='6' Name="kingsImg" Source="Assets\kings.jpg" />
                <TextBlock x:ConnectionId='7' Name="kingsText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="The Kings Head" />
                <TextBlock x:ConnectionId='8' Name="kingsBio"
                           Margin="0,10,0,0"
                           Style="{StaticResource Desc}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Text=" Rich in period-detail, this 17th-century, 3-storey pub offers local seafood dishes and live music." />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='46' Name="kingsInfo" Content="More Info" 
                    Style="{StaticResource LinkBtns}"
                                           
                   ></Button>
                    <Button x:ConnectionId='47' Name="KingsLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                          
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='9'
                      Name="KingsDetails"
                      TextWrapping="Wrap" 
                      Style="{StaticResource Desc}"
                      HorizontalAlignment="Center"
                      Text="Phone - (091) 566 630 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='10' Name="frontImg" Source="Assets\front.jpg" />
                <TextBlock x:ConnectionId='11' Name="frontText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Front Door" />
                <TextBlock x:ConnectionId='12' Name="frontBio"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Style="{StaticResource Desc}"
                           Text=" Laid-back, long-standing watering hole with 5 bars across 2 floors and cosy nook-and-cranny seating" />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='44' Name="frontInfo" Content="More Info"
                    Style="{StaticResource LinkBtns}"
                                           
                   ></Button>
                    <Button x:ConnectionId='45' Name="frontLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                          
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='13'
                      Name="frontDetails"
                      TextWrapping="Wrap" 
                      Style="{StaticResource Desc}"
                      HorizontalAlignment="Center"
                      Text="Phone - (091) 563 757 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='14' Name="pucanImg" Source="Assets\pucan.jpg" />
                <TextBlock x:ConnectionId='15' Name="pucanText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="An Púcán" />
                <TextBlock x:ConnectionId='16' Name="pucanBio"
                           Margin="0,10,0,0"
                           Style="{StaticResource Desc}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Text=" An Púcán is now open off Eyre Square. We have live music daily from 9pm. On Fridays and Saturdays we have live bands down the back and on Saturdays we have a late night resident DJ. " />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='42' Name="pucanInfo" Content="More Info" 
                    Style="{StaticResource LinkBtns}"
                                           
                   ></Button>
                    <Button x:ConnectionId='43' Name="pucanLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                          
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='17'
                      Name="pucanDetails"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Style="{StaticResource Desc}"
                      Text="Phone - (091) 376 561 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='18' Name="karmaImg" Source="Assets\karma.jpg" />
                <TextBlock x:ConnectionId='19' Name="karmaText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Karma" />
                <TextBlock x:ConnectionId='20' Name="KarmaBio"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Style="{StaticResource Desc}"
                           Text=" A club located just off Eyre Square, a great location for partys and nights out. " />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='40' Name="karmaInfo" Content="More Info" 
                    Style="{StaticResource LinkBtns}"
                                           
                   ></Button>
                    <Button x:ConnectionId='41' Name="karmaLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                          
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='21'
                      Name="karmaDetails"
                      TextWrapping="Wrap" 
                      Style="{StaticResource Desc}"
                      HorizontalAlignment="Center"
                      Text="Phone - (091) 500 330 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='22' Name="carbonImg" Source="Assets\carbon.jpg" />
                <TextBlock x:ConnectionId='23' Name="carbonText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Carbon" />
                <TextBlock x:ConnectionId='24' Name="carbonBio"
                           Margin="0,10,0,0"
                           Style="{StaticResource Desc}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Text=" A club found on eglinton street, well known for its cheap drink events, boiler room and world renound DJ appearances. " />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='38' Name="carbonInfo" Content="More Info"
                    Style="{StaticResource LinkBtns}"
                                            
                   ></Button>
                    <Button x:ConnectionId='39' Name="carbonLoc" Content="Location" 
                    Style="{StaticResource LinkBtns}"
                                           
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='25'
                      Name="carbonDetails"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Style="{StaticResource Desc}"
                      Text="Phone - (091) 449 204 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='26' Name="electricImg" Source="Assets\elec.jpg" />
                <TextBlock x:ConnectionId='27' Name="electricText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Electric Garden" />
                <TextBlock x:ConnectionId='28' Name="electricBio"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Style="{StaticResource Desc}"
                           Text=" Just off shop street Electric is host to great music in a spectacular venue. " />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='36' Name="electricInfo" Content="More Info"
                    Style="{StaticResource LinkBtns}"
                                              
                   ></Button>
                    <Button x:ConnectionId='37' Name="elecLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                         
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='29'
                      Name="elecDetails"
                      TextWrapping="Wrap" 
                      HorizontalAlignment="Center"
                      Style="{StaticResource Desc}"
                      Text="Phone - (091) 565 976 " />

                <Rectangle HorizontalAlignment="Stretch" Height="5" Margin="0,2,0,2" Stroke="Black" Fill="black" />
                <Image x:ConnectionId='30' Name="HaloImg" Source="Assets\halo.jpg" />
                <TextBlock x:ConnectionId='31' Name="HaloText"
                           Margin="0,10,0,0"
                           Style="{StaticResource Place}"
                           HorizontalAlignment="Center"
                           Text="Halo" />
                <TextBlock x:ConnectionId='32' Name="haloBio"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Style="{StaticResource Desc}"
                           Text=" Beside electric, this club is one of the biggest venues in Galway, know as 44 during the week and then turns into Halo for over 22s during the weekend. " />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='34' Name="haloInfo" Content="More Info" 
                    Style="{StaticResource LinkBtns}"
                                          
                   ></Button>
                    <Button x:ConnectionId='35' Name="haloLoc" Content="Location"
                    Style="{StaticResource LinkBtns}"
                                         
                    ></Button>

                </StackPanel>
                <TextBlock x:ConnectionId='33'
                      Name="haloDetails"
                      TextWrapping="Wrap" 
                      Style="{StaticResource Desc}"
                      HorizontalAlignment="Center"
                      Text="Phone - (091) 565 976 " />
            </StackPanel>
        </ScrollViewer>
        <Frame x:ConnectionId='1' Name="MyFrame">

        </Frame>
    </Grid>
</Page>

